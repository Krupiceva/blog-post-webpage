<!--Compose page -->

<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="textTitle">Title</label>
    <input class="form-control" id="textTitle" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label for="textPost">Post</label>
    <textarea class="form-control" id="textPost" name="postText" rows="8" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>
